<% include user_setting.ejs %>
<div class="col-sm-12 col-lg-9 col-md-9">
        <div class="card">
            <div class="card-header">Bank Information</div>
            <div class="card-body">
                <form id="newbankaccount" action="/admin/banking/savenewbankaccount_forenduser" method="POST">
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Bank Name:</label>
                        <div class="col-sm-8">
                                <select id="service_id" name="service_id" required class="form-control col-6" >
                                        <option  value="">Select Bank Name:</option>
                                        <% if(bank_service){
                                            for(var i=0;i<bank_service.length;i++){  
                                        %>
                                            <option value="<%= bank_service[i].service_id %>" ><%= bank_service[i].service_name %></option>
                                        <% }  }%>
                                        
                                </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Bank Account Name:</label>
                        <div class="col-8">
                            <input type="text" required class="form-control col-6" id="bankaccountname" name="bankaccountname" placeholder="Bank Account Name">
  
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-4 col-form-label">Bank Account Number:</label>
                        <div class="col-sm-8">
                            <input type="text" required class="form-control col-6" id="bankaccountnumber" name="bankaccountnumber" placeholder="Bank Account Number">
  
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-8">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </div>
                </form>
                
            </div> 
           
        </div>
</div>
